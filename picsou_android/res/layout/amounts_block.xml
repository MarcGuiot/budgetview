<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="horizontal"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">

  <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal">

      <com.budgetview.android.components.GaugeView
                  android:id="@+id/amountsGauge"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginRight="15dp"
        />

      <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginBottom="4dp"
                  android:layout_gravity="center_horizontal">

        <TextView android:id="@+id/actualLabel"
                  android:text="@string/amountBlockActual"
                  android:layout_above="@+id/actualAmount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="normal"
                  android:textSize="12dp"
                  android:textColor="#555555"
                  android:layout_gravity="center_horizontal"/>

        <TextView android:id="@+id/actualAmount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textSize="16dp"
                  android:textColor="#333333"
                  android:text="100.00"
                  android:layout_row="1"
                  android:layout_column="1"
                  android:layout_gravity="center_horizontal"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal">

      <TextView android:id="@+id/plannedLabel"
                  android:text="@string/amountBlockPlanned"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="normal"
                  android:textSize="12dp"
                  android:textColor="#555555"
                  android:layout_gravity="center"
                  android:focusable="false"/>

        <TextView android:id="@+id/plannedAmount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textSize="16dp"
                  android:textColor="#333333"
                  android:text="200.00"
                  android:layout_gravity="center"/>
      </LinearLayout>

  </LinearLayout>

</merge>