 <profiles>
    <profile>
      <id>windows</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
      </activation>
      <properties>
        <Toolkit>sun.awt.windows.WToolkit</Toolkit>
	    <forkmode>pertest</forkmode>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <name>Linux</name>
          <family>unix</family>
        </os>
      </activation>
      <properties>
	    <Toolkit>sun.awt.motif.MToolkit</Toolkit>
	    <forkmode>once</forkmode>
      </properties>
    </profile>
   <profile>
     <id>mac</id>
     <activation>
       <os>
	     <name>mac</name>
         <family>unix</family>
       </os>
     </activation>
