<?xml version="1.0" encoding="utf-8"?>
<splits xmlns="http://www.globsframework.org/xml/splits.xsd">

  <styles>
    <ui name="background" class="org.globsframework.gui.splits.components.StyledPanelUI"
        topColor="background.top" bottomColor="background.bottom"/>
    <ui name="main" class="org.globsframework.gui.splits.components.StyledPanelUI"
        topColor="titlebar.top" bottomColor="titlebar.bottom" borderColor="titlebar.border"
        borderWidth="1"
        cornerRadius="10" distance="1"/>
    <style selector="label" font="Arial,bold,14"/>
    <style selector="button" font="Arial,bold,14"/>
  </styles>

  <frame title="Morphographe - v1.1" size="(800,600)" background="background.bottom">
    <column opaque="true">
      <row weightY="0.1" opaque="true" background="background.top">
        <label icon="morpho.jpg" anchor="center" marginLeft="20"/>
        <panel ui="main" weightx="0.5" weightY="0.1" margin="20" anchor="center">
          <row marginTop="5" marginBottom="3" opaque="false">
            <comboBox ref="topic" opaque="false" fill="none" anchor="center" size="(300,20)"/>
            <comboBox ref="series" opaque="false" fill="none" anchor="center" size="(300,20)"/>
          </row>
        </panel>
      </row>
      <component ref="seriesPanel" opaque="false" weightY="10"/>
    </column>
  </frame>
</splits>
