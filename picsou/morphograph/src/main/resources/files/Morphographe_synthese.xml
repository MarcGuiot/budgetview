<morphograph>
  <topic name="Synthèse -oir, -oire, -tion, -ment">

    <series name="Séance 1">

      <exercise name="Perception 1"
                exerciseTypeName="select"
                title="Vrai ou faux"
                description="Cliquer sur vrai ou faux pour répondre aux affirmations suivantes.">
        <select title="Un accotoir correspond à coter" alt1="Vrai" alt2="Faux" answers="2"/>
        <select title="Un clapotement correspond à pote" alt1="Vrai" alt2="Faux" answers="2"/>
        <select title="Une indigestion correspond à digérer" alt1="Vrai" alt2="Faux" answers="1"/>
        <select title="Un escarpement correspond à escarpin" alt1="Vrai" alt2="Faux" answers="2"/>
        <select title="Un suppositoire correspond à supposer" alt1="Vrai" alt2="Faux" answers="2"/>
        <select title="Une intégration correspond à intégrer" alt1="Vrai" alt2="Faux" answers="1"/>
      </exercise>

      <exercise name="Perception 2"
                exerciseTypeName="select"
                title="Classement"
                description=" Cliquer sur les mots qui appartiennent à la même famille que le mot initial.">
        <select title="Envahissement" alt1="envahisseur" alt2="vahiné" alt3="invasion" alt4="envasement" alt5="hisser"
                answers="1,3"/>
        <select title="Prospection" alt1="prospectus" alt2="prospecter" alt3="prospère" alt4="prospectrice"
                alt5="spectateur" answers="1,2,4"/>
        <select title="Déclamatoire" alt1="déclarer" alt2="amatrice" alt3="acclamation" alt4="éclat"
                alt5="clameur" answers="3,5"/>
        <select title="Démêloir" alt1="mélisse" alt2="démêlure" alt3="mêlée" alt4="mélasse"
                alt5="emmêlement" answers="2,3,5"/>
        <select title="Affiliation" alt1="fils" alt2="filial" alt3="filament" alt4="filature"
                alt5="affiloir" answers="1,2"/>
      </exercise>

      <exercise name="Perception 3"
                exerciseTypeName="select"
                title="Recherche d'intrus"
                description="Trouver l'intrus : quel mot ne renvoie pas à une action ?">
        <select title="1" alt1="espoir" alt2="clément" alt3="récitation" answers="2"/>
        <select title="2" alt1="mordillement" alt2="altercation" alt3="observatoire" answers="2"/>
        <select title="3" alt1="boudoir" alt2="rédaction" alt3="entrelacement" answers="1"/>
        <select title="4" alt1="autrement" alt2="disposition" alt3="grattoir" answers="1"/>
        <select title="5" alt1="remontoir" alt2="ensoleillement" alt3="intonation" answers="3"/>
        <select title="6" alt1="narration" alt2="mangeoire" alt3="poliment" answers="3"/>
      </exercise>

      <exercise name="Production 1"
                exerciseTypeName="input"
                title="Compléter les phrases suivantes"
                description="Compléter la phrase en produisant un mot obtenu à partir du mot initial.">
        <input title="Un instrument qui sert à décrotter est un" answer="décrottoir"/>
        <input title="L'action d'écouler est un" answer="écoulement"/>
        <input title="Quand on dissèque on fait une" answer="dissection"/>
        <input title="Un endroit où l'on bute est un" answer="butoir"/>
        <input title="Quand on intervient on fait une" answer="intervention"/>
        <input title="L'action d'élancer est un" answer="élancement"/>
      </exercise>

      <exercise name="Production 2"
                exerciseTypeName="input"
                title="Extraction de la forme de base"
                description="Quel mot reconnaît-on dans les mots suivants ?">
        <input title="vaccination" answer="vaccin"/>
        <input title="sautoir" answer="saut"/>
        <input title="désarmement" answer="arme"/>
        <input title="bassinoire" answer="bassin"/>
        <input title="incomplètement" answer="complet"/>
        <input title="localisation" answer="lieu"/>
      </exercise>

    </series>


  </topic>

</morphograph>
