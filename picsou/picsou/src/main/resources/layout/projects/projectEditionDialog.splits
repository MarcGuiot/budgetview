<splits xmlns="http://www.globsframework.org/xml/splits.xsd">

  <styleImport file="/layout/picsouStyles.splits"/>
  <styles>
    <style selector="button#month" ui="hyperlinkButtonWithoutUnderline"
           icon="button_calendar.png"
           pressedIcon="button_calendar_pressed.png"
           disabledIcon="button_calendar_disabled.png"
           rolloverIcon="button_calendar_rollover.png"
           horizontalAlignment="left" fill="none" anchor="west"
           marginLeft="8" marginRight="8"/>
    <style selector="component#amountEditor" marginRight="8"/>

    <style selector="label.totalAmount" font="-,bold,14" foreground="#222" marginRight="5"
           anchor="center" fill="none"/>

    <style selector="button.addItem"
           ui="hyperlinkButtonWithoutUnderline" foreground="block.footer.button"
           fill="none" anchor="west" marginLeft="10"/>
  </styles>

  <panel styleClass="dialog" preferredSize="(550,600)">
    <column styleClass="innerDialog">

      <label ref="title" styleClass="title"/>

      <row>
        <label text="$projectEdition.name" styleClass="formLabel"/>
        <textField ref="projectName"/>
      </row>

      <htmlEditorPane text="$projectEdition.series.message" marginTop="5" weightY="0.1"/>
      <htmlEditorPane text="$projectEdition.items.description" marginTop="5" weightY="0.1"/>

      <column styleClass="blockScrollBorder" weightY="100.0">
        <scrollPane>
          <column>
            <repeat ref="items" layout="verticalGrid" margin="10" marginTop="5" marginBottom="0">
              <header>
                <label text="$projectEdition.grid.label"/>
                <label text="$projectEdition.grid.month"/>
                <label text="$projectEdition.grid.amount"/>
              </header>
              <textField ref="itemLabel"/>
              <button ref="month"/>
              <component ref="amountEditor"/>
              <button action="deleteItem" styleClass="icon" icon="button_delete.png"/>
            </repeat>
            <filler fill="vertical"/>
          </column>
        </scrollPane>

        <row styleClass="footer">
          <filler fill="horizontal"/>
          <button action="addItem" styleClass="addItem" tooltipText="$projectEdition.addItem.tooltip"/>
        </row>
      </column>

      <row marginTop="10" marginBottom="10">
        <label text="$projectEdition.total.actual" styleClass="formLabel"/>
        <label ref="totalActual" styleClass="totalAmount"/>
        <component ref="gauge" styleClass="totalGauge"/>
        <label ref="totalPlanned" styleClass="totalAmount"/>
        <label text="$projectEdition.total.planned" styleClass="formLabelRight"/>
      </row>

    </column>
  </panel>

</splits>
