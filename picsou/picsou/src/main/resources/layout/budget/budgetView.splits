<splits xmlns="http://www.globsframework.org/xml/splits.xsd">

  <styleImport file="/layout/picsouStyles.splits"/>

  <styles>
    <style selector=".budgetLabelBlock" marginBottom="10"/>
    <style selector=".budgetLabelBlock label" foreground="budgetLabel.text" marginTop="5" font="-,plain,10"/>
  </styles>

  <column styleClass="main">

    <horizontalSplit ref="horizontalSplit" styleClass="mainDivider">

      <verticalBoxes weightX="1">
        <label text="$budgetSummaryView.title" styleClass="blockTitle" horizontalAlignment="center"/>
        <column styleClass="block" marginBottom="10" preferredSize="(200,200)">
          <panel ref="budgetSummaryView"/>
        </column>

        <verticalSplit ref="verticalSplit1" weightY="10" alignmentX="0.5" styleClass="mainDivider">
          <panel ref="incomeBudgetView"/>
          <panel ref="savingsBudgetView"/>
        </verticalSplit>
      </verticalBoxes>

      <verticalSplit ref="verticalSplit2" styleClass="mainDivider">
        <panel ref="recurringBudgetView"/>
        <panel ref="extrasBudgetView"/>
      </verticalSplit>

      <verticalSplit ref="verticalSplit3" styleClass="mainDivider">
        <panel ref="variableBudgetView"/>
      </verticalSplit>
    </horizontalSplit>

  </column>
</splits>