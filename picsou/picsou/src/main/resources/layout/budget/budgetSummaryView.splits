<splits xmlns="http://www.globsframework.org/xml/splits.xsd">

  <styleImport file="/layout/picsouStyles.splits"/>

  <styles>
    <style selector="button.roundedButton" fill="none" weightX="0"/>

    <ui name="underlinedButtonUI" class="org.globsframework.gui.splits.components.HyperlinkButtonUI"
        underline="true" useNormalColorWhenDisabled="true" autoHideEnabled="false"
        lineColor="block.total.underline"/>

    <style selector=".totalAmountTitle" anchor="center" fill="none"/>
    <style selector=".totalAmount" anchor="center" fill="none" font="-,bold,14"/>
    <style selector="button.totalAmount" ui="underlinedButtonUI" foreground=""/>

    <style selector="button#balanceLabel" fill="none" anchor="center"/>

    <style selector="button#uncategorized" ui="underlinedButtonUI"
           horizontalTextPosition="left" iconTextGap="2"/>

    <style id="uncategorizedEnabled" selector="x"
           icon="arrow_right_red.png" rolloverIcon="arrow_right_blue_full.png"/>

    <style id="uncategorizedDisabled" selector="x"
           icon="" rolloverIcon=""/>

    <style selector="label.message"
           foreground="block.total.title" font="-,plain,10"
           horizontalAlignment="center" border="empty(5,0,0,0)"
           fill="horizontal" anchor="bottom" weightY="0"/>

    <style selector="htmlEditorPane#helpMessage"
           border="empty(5,0,0,0)" foreground="budgetSummary.help.message"/>


    <style selector=".subRow .totalAmountTitle"
           marginRight="10" weightX="1"/>
    <style selector=".subRow button.totalAmount"
           font="-,bold,12" horizontalTextPosition="left"
           weightX="1" fill="none" anchor="left"/>

  </styles>

  <column border="empty(10,10,10,10)">

    <row weightY="0" marginBottom="4">
      <filler fill="horizontal"/>
      <row>
        <label ref="lastPositionTitle" styleClass="totalAmountTitle"/>
        <label ref="lastPositionLabel" styleClass="totalAmount"/>
      </row>
      <filler fill="horizontal"/>
    </row>

    <component ref="chart" minimumSize="(100,100)" weightY="10"/>

    <column marginTop="4" weightY="0">
      <row marginTop="4" styleClass="subRow">
        <filler fill="horizontal"/>
        <label text="$budgetSummaryView.uncategorized" styleClass="totalAmountTitle"/>
        <button ref="uncategorized" styleClass="uncategorized"/>
        <filler fill="horizontal"/>
      </row>
    </column>

    <label ref="multiSelectionLabel" styleClass="message" weightY="0"/>

  </column>

</splits>