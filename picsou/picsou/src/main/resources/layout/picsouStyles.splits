<splits xmlns="http://www.globsframework.org/xml/splits.xsd">

  <styles>

    <ui name="wave" class="org.designup.picsou.gui.plaf.WavePanelUI"
        topColor="wave.panel.top" bottomColor="wave.panel.bottom" waveColor="wave.panel.wave"/>

    <ui name="loginPanel" class="org.globsframework.gui.splits.components.StyledPanelUI"
        topColor="login.block.top" bottomColor="login.block.bottom" borderColor="login.block.border"
        borderWidth="2" cornerRadius="10"/>

    <ui name="dialog" class="org.globsframework.gui.splits.components.StyledPanelUI"
        topColor="dialog.bg.top" bottomColor="dialog.bg.bottom"/>

    <!-- Blocks and inner blocks -->

    <ui name="block" class="org.globsframework.gui.splits.components.StyledPanelUI"
        topColor="block.top" bottomColor="block.bottom" borderColor="block.border" borderWidth="2"
        cornerRadius="20"/>
    <style selector=".block" ui="block" opaque="false"/>
    <style selector="label.blockTitle" anchor="center"
           foreground="#FFFFFF" marginBottom="5" font="-,bold,13"
           shadowDirection="northwest" shadowColor="#222222"/>
    <style selector=".block label.totalAmount" foreground="block.total" font="-,bold,20" anchor="center"/>
    <style selector=".block label" foreground="#000000"/>

    <ui name="hyperlinkButton" class="org.globsframework.gui.splits.components.HyperlinkButtonUI"/>
    <ui name="innerBlock" class="org.globsframework.gui.splits.components.StyledPanelUI"
        topColor="block.inner.top" bottomColor="block.inner.bottom" borderColor="block.inner.border"
        borderWidth="2" cornerRadius="10"/>
    <style selector=".innerBlock" ui="innerBlock" marginTop="5" marginBottom="5"/>
    <style selector=".innerBlock hyperlink" foreground="block.inner.hyperlink"/>

    <!-- Default form elements -->

    <style selector="textArea.readOnly" opaque="false" lineWrap="true" wrapStyleWord="true"/>

    <style selector="label.title"
           font="-,bold,16" foreground="import.title"
           fill="none" anchor="center"
           marginBottom="25"/>

    <style selector="label.header"
           font="-,plain,11" foreground="import.header.label"
           marginTop="5" marginBottom="3" fill="none" anchor="left"/>

    <style selector="label.formLabel"
           font="-,plain,12" foreground="import.form.label"
           anchor="east" marginRight="10"/>

    <style selector="row.buttons"
           fill="horizontal" anchor="center"
           marginTop="10" marginBottom="10" marginLeft="40" marginRight="40"/>

    <style selector="row.buttons button"
           fill="horizontal" weightX="10"/>

    <style selector="button.hyperlink" ui="hyperlinkButton"/>

  </styles>

</splits>