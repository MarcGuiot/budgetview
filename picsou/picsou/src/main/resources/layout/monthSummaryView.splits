<splits xmlns="http://www.design-up.com/xml/splits.xsd">

  <styleImport file="/layout/picsouStyles.splits"/>
  <styles>
    <style selector="column.message" margin="10"
           opaque="true" background="block.inner.bg" border="line(block.inner.border)"/>
    <style selector=".message htmlEditorPane" margin="10" marginTop="5"/>
    <style selector=".message button" fill="none" anchor="center"/>

    <style selector="label.amount" font="-,plain,10"/>

    <ui name="viewSelector" class="org.globsframework.gui.splits.components.StyledToggleButtonUI"
        topColor="viewselector.top" bottomColor="viewselector.bottom"
        borderColor="viewselector.border" borderWidth="1" cornerRadius="10"/>

  </styles>

  <column name="monthSummary">

    <label text="$monthsummary.title" styleClass="blockTitle"/>

    <panel styleClass="block">
      <cards ref="cards" styleClass="innerBlock" opaque="false">

        <card name="noData">
          <column styleClass="message">
            <htmlEditorPane text="$monthsummary.noData.text" name="noDataMessage" hyperlinkListener="hyperlinkHandler"/>
            <button action="import"/>
            <filler fill="vertical"/>
          </column>
        </card>

        <card name="noSeries">
          <column styleClass="message">
            <htmlEditorPane text="$monthsummary.noSeries.text" name="noSeriesMessage" hyperlinkListener="hyperlinkHandler"/>
            <button action="openSeriesWizard"/>
            <filler fill="vertical"/>
          </column>
        </card>

        <card name="standard">
          <column>
            <row weightY="0">
              <filler fill="horizontal"/>
              <grid weightY="0">
                <component ref="totalBalance" gridPos="(0,0,1,2)"
                           receivedColorTop="balancegraph.received.top"
                           receivedColorBottom="balancegraph.received.bottom"
                           spentColorTop="balancegraph.spent.top"
                           spentColorBottom="balancegraph.spent.bottom"
                           borderColor="balancegraph.border"
                           preferredSize="(70,35)"
                           minimumSize="(70,35)"
                           weightX="0.1" weightY="1.0"
                           marginLeft="10" marginRight="10" marginBottom="5"
                           fill="vertical"/>
                <label text="$monthsummary.balance" styleClass="totalAmountTitle" gridPos="(1,0)"
                       autoHideSource="balanceAmount" tooltipText="$monthsummary.balance.tooltip"/>
                <label ref="balanceAmount" styleClass="totalAmount" gridPos="(1,1)"/>
              </grid>
              <filler fill="horizontal"/>
            </row>

            <scrollPane weightY="100">
              <column border="empty(10)">
                <repeat ref="budgetAreaRepeat" layout="verticalGrid">
                  <button ref="budgetAreaName" styleClass="itemLink"/>
                  <button ref="budgetAreaAmount" styleClass="amountLink"/>
                  <component ref="budgetAreaGauge" styleClass="detailGauge"/>
                  <label ref="budgetAreaPlannedAmount" styleClass="amount" anchor="right"/>
                </repeat>
                <filler fill="vertical"/>
                <row margin="10" autoHideSource="uncategorizedAmountLabel">
                  <filler fill="horizontal"/>
                  <button action="categorize" autoHideSource="uncategorizedAmountLabel" anchor="left"
                          styleClass="hyperlink" font="-,bold,12"/>
                  <label ref="uncategorizedAmountLabel" styleClass="amount" anchor="left"/>
                </row>
              </column>
            </scrollPane>
          </column>
        </card>
      </cards>
    </panel>

  </column>
</splits>