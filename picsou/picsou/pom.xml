  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <encoding>UTF-8</encoding>
          <debug>true</debug>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <argLine>-Xmx256m</argLine>
          <systemProperties>
            <property>
              <name>file.encoding</name>
              <value>UTF-8</value>
            </property>
            <property>
              <name>uispec4j.test.library</name>
              <value>junit</value>
            </property>
          </systemProperties>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*Tests.java</include>
          </includes>
          <excludes>
            <exclude>**/*TestCase.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.3</version>
        <executions>
          <execution>
            <id>install</id>
            <phase>install</phase>
            <configuration>
              <tasks>
                <mkdir dir="src/main/resources/demo"/>
                <java fork="yes" classname="org.designup.picsou.functests.DemoGenerationTest" failonerror="true">
                  <jvmarg line="-Doutfile=src/main/resources/demo/demo.snapshot"/>
                  <classpath>
                    <path refid="maven.test.classpath"/>
                  </classpath>
                </java>
                <java fork="yes"
                      classname="org.designup.shrinker.JarShrinker" failonerror="true">
                  <classpath>
                    <path refid="maven.runtime.classpath"/>
                  </classpath>
                  <sysproperty key="with.debug" value="true"/>
                  <arg
                    line="dump.jar ${project.build.directory}/../dev/ant/inputDump.txt ${project.build.directory}/../dev/ant/ignoreClient.txt"/>
                </java>
                <manifest file="target/classes/MANIFEST.MF">
                  <attribute name="Main-Class" value="org.designup.picsou.server.persistence.direct.Dump"/>
                </manifest>
                <jar update="true" jarfile="dump.jar" manifest="target/classes/MANIFEST.MF"/>
                <java fork="yes"
                      classname="org.designup.shrinker.JarShrinker" failonerror="true">
                  <classpath>
                    <path refid="maven.runtime.classpath"/>
                  </classpath>
                  <sysproperty key="with.debug" value="true"/>
                  <arg
                    line="cashpilot.jar ${project.build.directory}/../dev/ant/inputClient.txt ${project.build.directory}/../dev/ant/ignoreClient.txt"/>
                </java>
                <manifest file="target/classes/MANIFEST.MF">
                  <attribute name="Main-Class" value="picsou.Main"/>
                </manifest>
                <jar update="true" jarfile="cashpilot.jar" manifest="target/classes/MANIFEST.MF"/>
                <jar destfile="config.jar">
                  <fileset dir="src/main/resources" includes="banks/**"/>
                </jar>
                <delete dir="obfuscated"/>
                <java fork="yes" jar="dev/Zelix/ZKM.jar">
                  <jvmarg line="-Xmx512M"/>
                  <arg line="-de dev/Zelix/defaultExclude.txt dev/ant/zelix.txt"/>
                </java>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

